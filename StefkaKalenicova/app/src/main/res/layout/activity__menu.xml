<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Menu_aktivity">\


    <ImageButton
        android:id="@+id/ImgBtnToDo3"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="#FFFF00"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/ImgBtnToDo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ImgBtnToDo2"
        app:srcCompat="@drawable/cvetq_koito_cyftqt_prez_esenta" />

    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="88dp"
        android:text="Цветя за градината"
        app:layout_constraintBottom_toBottomOf="@+id/text_id"
        app:layout_constraintStart_toEndOf="@+id/text_id"
        app:layout_constraintTop_toBottomOf="@+id/ImgBtnToDo3" />

    <ImageButton
        android:id="@+id/ImgBtnToDo4"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_marginTop="56dp"
        android:layout_weight="1"
        android:background="#FFFF00"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/ImgBtnToDo3"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_id"
        app:srcCompat="@drawable/cvete" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="60dp"
        android:text="Цветя за дома"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgBtnToDo2" />

    <ImageButton
        android:id="@+id/ImgBtnToDo2"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#FFFF00"
        android:clickable="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tips" />

    <TextView
        android:id="@+id/text3_id"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:text="Съвети"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImgBtnToDo4" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="23dp"
        android:layout_marginTop="88dp"
        android:keyboardNavigationCluster="true"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@+id/text3_id"
        tools:layout_editor_absoluteX="161dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>